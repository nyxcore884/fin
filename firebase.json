{
  "functions": [
    {
      "source": "functions",
      "codebase": "python-functions",
      "runtime": "python311"
    },
    {
      "source": "genkit",
      "codebase": "nodejs-functions",
      "runtime": "nodejs20",
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" ci"
      ]
    }
  ],
  "hosting": {
    "public": ".next",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/process-session",
        "function": {
          "functionId": "process_upload_session",
          "region": "us-central1",
          "codebase": "python-functions"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
