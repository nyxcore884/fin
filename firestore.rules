rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own profile document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow create/update/read on upload sessions without auth, as the app is currently auth-less
    match /upload_sessions/{sessionId} {
      allow read, create, update: if true;
    }

    // Admins can read all results. Users can read their own results.
    // Cloud Functions can create results.
    match /budget_results/{resultId} {
      allow create: if request.auth == null; // Allow from Cloud Functions
      allow read, delete: if true; // Allow reads for now without auth
      allow list: if true; // Allow lists for now without auth
    }

    // Backups can only be created by Cloud Functions and read by admins
    match /backups/{backupId} {
        allow create: if request.auth == null; // Allow from Cloud Functions
        allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Users can create their own feedback. Admins can read all feedback.
    match /feedback/{feedbackId} {
      allow create: if true; // Allow feedback creation without auth
      allow read, update: if true; // Allow read/update for now without auth
    }
  }
}
