rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own profile document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Anyone can create an upload. Users can only read/update their own uploads.
    // Admins can read all uploads.
    match /uploads/{uploadId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && (resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow list: if request.auth != null; // Users can list their own uploads via query
    }

    // Users can only read their own results.
    // Admins can read all results.
    match /budget_results/{resultId} {
      // Allow creation from a Cloud Function by checking for a specific token or role if needed,
      // for now, we allow any authenticated user to create a result, assuming it is handled by the function.
      allow create: if request.auth != null;
      allow read, delete: if request.auth != null && (resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow list: if request.auth != null; // Users can list their own results via query
    }
  }
}
